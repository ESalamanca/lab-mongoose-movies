<h2>Edit {{movie.title}} Movie</h2>

<form action="/movies/{{movie._id}}" method="POST">
  <label>
    Title: 
    <input type="text" name="title" required="true" value="{{movie.title}}">
  </label>

  <label>
    Genre: 
    <input type="text" name="genre" value="{{movie.genre}}">
  </label>

  <label>
    Plot: 
    <input type="text" name="plot" value="{{movie.plot}}">
  </label>

  <label>
    Cast: 
    <select multiple name="cast"> 
      {{#each newCelebs}}
      {{#if inMovie}}
      <option value="{{id}}" selected>{{name}}</option>
      {{else }}
      <option value="{{id}}">{{name}}</option>
      {{/if }}
      {{/each}}
    </select> 
  </label>

  <button type="submit">Edit</button>
</form>